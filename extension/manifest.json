{
  "manifest_version": 3,
  "name": "QA-ассистент",
  "version": "0.1",
  "description": "Автогенерация тестовой документации. Выдели требование и сгенерируй!",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://192.168.233.208:11434/*",
    "https://openrouter.ai/api/v1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
